<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>AdServlet</servlet-name>
    <servlet-class>ru.job4j.cars.servlet.AdServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdModifyServlet</servlet-name>
    <servlet-class>ru.job4j.cars.servlet.AdModifyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListAdServlet</servlet-name>
    <servlet-class>ru.job4j.cars.servlet.ListAdServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FiltersServlet</servlet-name>
    <servlet-class>ru.job4j.cars.servlet.FiltersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>ru.job4j.cars.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>ru.job4j.cars.servlet.AuthServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegServlet</servlet-name>
    <servlet-class>ru.job4j.cars.servlet.RegServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdServlet</servlet-name>
    <url-pattern>/ad.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdModifyServlet</servlet-name>
    <url-pattern>/modify</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FiltersServlet</servlet-name>
    <url-pattern>/filters</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegServlet</servlet-name>
    <url-pattern>/reg.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListAdServlet</servlet-name>
    <url-pattern>/list</url-pattern>
  </servlet-mapping>

</web-app>